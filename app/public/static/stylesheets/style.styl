body
  padding-top: 50px

/* Bootstrap fixes -----------------------------------------------------------*/
.panel-heading
  h1, h2, h3, p
    margin-top: 0
    margin-bottom: 0

code, kbd, pre, samp
  font-family: Monaco,Menlo,Consolas,monospace;

/* Common classes ------------------------------------------------------------*/

.pad-right-5
  padding-right: 5px

.margin-top-15
  margin-top: 15px

.margin-bottom-30
  margin-bottom: 30px

.float-right
  float: right;

.white
  color: #fff

.clickable
  cursor: pointer

/* Simple form pill ----------------------------------------------------------*/

.form-pill
  h2, .checkbox
    margin-bottom: 10px

  .alert p
    font-size: 18px;

  button.btn
    margin-top: 10px
    margin-bottom: 10px

  input
    position: relative
    font-size: 16px
    height: auto
    padding: 10px
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box

  input:focus
    z-index: 2

  .list
    input:not(:first-child)
      margin-top: -1px
      border-top-left-radius: 0
      border-top-right-radius: 0
    input:not(:last-child)
      border-bottom-left-radius: 0
      border-bottom-right-radius: 0

.form-pill.centered
  max-width: 400px;
  padding: 15px;
  margin: 100px auto;
  


/* Footer --------------------------------------------------------------------*/

footer
  .left-links
    float: left
  .right-links
    float: right

/* Blog ----------------------------------------------------------------------*/

.blog-side
  .post-link
    border-bottom: 1px solid #ddd
    padding-bottom: 10px
    margin-bottom: 10px
    h4
      margin: 0
    p
      margin: 0
      color: #888

.blog-data
  h1.title
    padding-bottom: 5px
    border-bottom: 1px solid #ddd;
    margin-bottom: 5px
  .post
    margin-bottom: 50px
  .date
    color: #888
    margin-bottom: 20px
