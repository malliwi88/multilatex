body
  padding-top: 40px

/* Bootstrap fixes -----------------------------------------------------------*/
.panel-heading
  h1, h2, h3
    margin-top: 0
    margin-bottom: 0


/* Common classes ------------------------------------------------------------*/

.pad-right-5
  padding-right: 5px

.float-right
  float: right;

.white
  color: #fff

.clickable
  cursor: pointer

/* Simple form pill ----------------------------------------------------------*/

.form-pill
  h2, .checkbox
    margin-bottom: 10px

  .alert p
    font-size: 18px;

  button.btn
    margin-top: 10px
    margin-bottom: 10px

  input
    position: relative
    font-size: 16px
    height: auto
    padding: 10px
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box

  input:focus
    z-index: 2

  .list
    input:not(:first-child)
      margin-top: -1px
      border-top-left-radius: 0
      border-top-right-radius: 0
    input:not(:last-child)
      border-bottom-left-radius: 0
      border-bottom-right-radius: 0

.form-pill.centered
  max-width: 400px;
  padding: 15px;
  margin: 100px auto;
  


/* Footer --------------------------------------------------------------------*/

footer
  .left-links
    float: left
  .right-links
    float: right
