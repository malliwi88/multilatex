.project-urls
  margin-top 10px
  margin-bottom 10px
  font-size 23px
  line-height 35px
  .project-name
    font-weight bold
.project-btns
  margin-top 10px
  text-align right
  a
    margin-left 10px
    word-spacing -8px
  a:first-child
    margin-left 0

p.forked-from
  margin-top -10px
  font-size 13px
  color #888
  a
    color #72AEE2

@media (max-width: 991px)
  .project-btns
    text-align left
    a
      margin-bottom 10px

.contrib-add-form
  margin-top -10px
  margin-bottom 20px
  .alert
    margin-top 10px

.panel-contrib
  a.rem
    float right
    cursor pointer

.thumb
  .frame, .frame .bar
    height 5px
    border-radius 2px
  .frame
    background #eee
    visibility hidden
    .bar
      background #ccc
.thumb:hover
  .frame
    visibility visible

.panel-simple-list
  .panel-heading
    padding 5px 10px
  .panel-body
    padding 0
    p
      border-bottom 1px solid #ddd
      padding 5px 10px
      margin 0
    p:last-child
      border-bottom 0

.panel-commit
  .authors
    display block
    a
      display block
    img
      width 20px
      height 20px
  .date
    float right

@media (min-width: 992px)
  .panel-commit
    .panel-heading
      position relative
      .authors
        display block
        max-width 40%
      .commit
        position absolute
        left 0
        right 0
        top 5px
        text-align center
