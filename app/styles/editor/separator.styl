.separator
  background-color #3d3d3d

.sep-vert
  cursor col-resize
  .collapser
    padding 10px 1px
    cursor pointer
    .arrow
      border 5px solid transparent
  .collapser:hover
    background-color #666
  .col-left
    .arrow
      border-left 0
      border-right-color #ccc
  .col-right
    .arrow
      border-right 0
      border-left-color #ccc
