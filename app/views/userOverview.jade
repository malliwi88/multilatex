block variables
  title = user.username

extends username

block content2
  .row
    .col-md-3.user-info-column
      .thumbnail
        img(src=storeUrl(user.avatarHash), alt=user.username + "'s avatar")
        h3= user.username
        p Member since #{prettyDate(user.registered)}
        if session.username === user.username
          button.btn.btn-default.btn-block(type='button') Edit profile
    .col-md-5
      .panel.panel-default.latest-projects
        .panel-heading
          p
            i.glyphicon.glyphicon-asterisk
            |  Latest projects
        .panel-body
          if projects.length === 0
            p ...
          else
            for project in projects
              p
                a(href='/#{project.username}/#{project.location}')= project.location
    .col-md-4
      .panel.panel-default.recent-activity
        .panel-heading
          p
            i.glyphicon.glyphicon-bullhorn
            |  Recent activity
        .panel-body
          p ...
