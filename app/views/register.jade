extends layout

block content
  .container
    form.form-pill.form-register.centered
      h2 Get an account
      .alert.alert-danger(style='display: none') <p></p>
      .list
        input.username.form-control(type='text', placeholder='Username', required='required', autofocus='autofocus')
        input.email.form-control(type='email', placeholder='Email', required='required')
        input.password.form-control(type='password', placeholder='Password', required='required')
        input.password2.form-control(type='password', placeholder='Confirm Password', required='required')
      button.btn.btn-lg.btn-success.btn-block(type='submit') Register

block scripts
  script(src='/s/js/register.js')
