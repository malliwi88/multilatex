doctype 5
html(lang='en')
  head
    meta(charset='utf-8')
    title Multilatex
    link(rel='stylesheet', href='/static/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/static/stylesheets/style.css')
    block head
  body
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Multilatex
        .navbar-collapse.collapse
          form.form-signin.navbar-form.navbar-right
            .form-group.pad-right-5
              input.username.form-control(type='text', placeholder='Username')
            .form-group.pad-right-5
              input.password.form-control(type='password', placeholder='Password')
            button.btn.btn-success(type='submit') Sign in

    block content

    .container
      hr
      footer
        p <a href='http://creativecommons.org/licenses/by-nc-sa/4.0/'>(CC)</a>
