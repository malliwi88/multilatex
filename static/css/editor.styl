.separator
  background-color: #3d3d3d

.sep-vert
  cursor: col-resize
  .collapser
    padding: 10px 1px
    cursor: pointer
    .arrow
      border: 5px solid transparent
  .collapser:hover
    background-color: #666
  .col-left
    .arrow
      border-left: 0
      border-right-color: #ccc
  .col-right
    .arrow
      border-right: 0
      border-left-color: #ccc

/* Tree view -----------------------------------------------------------------*/

.tree-view
  overflow: auto;
  ul
    margin: 0
    list-style-type: none
    padding-left: 20px
  i
    display: inline-block
    width: 20px
    color: #777
  .main > .item > i
    color: #111
  span
    cursor: pointer
    padding: 0 6px
  .item
    border-radius 3px 0 0 3px
    padding-left: 3px
    .actions
      float: right
      a
        padding: 0 2px
      a i
        color: #888
      display: none
  .item:hover
    background-color: #C5F0E9
    .actions
      display: inline
      a:hover i
        color: #000
  .item.selected
    background-color: #9BE9DC

.project-bar
  background-color: #EEE
  h3
    display: inline
    line-height: 30px
    padding-left: 2px
    cursor: default
  span
    float: right
  .btn
    padding: 2px 4px 0 4px
    margin: 2px 4px

.tree-view>ul
  padding-left: 0
